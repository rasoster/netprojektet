@model List<netprojektet.Models.DataLayer.Project>

    
<div class="text-center">
    <div>
        <table class="table">
            @{
                
                <tr>
                    <th>Skapare</th>
                    <th>Titel</th>
                    <th>Beskrivning</th>
                    <th>Antal deltagare</th>
                    <th></th>
                    

                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Creator.FirstName @item.Creator.LastName</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>ca 3</td>
                        <td><button asp-action = "GåMed"> Gå med i projekt </button></td>
                        
                        
                    </tr>
                }

            }

        </table>


    </div>
</div>