@model EducationViewModel

<form asp-action="AddEducation"  method="post">
    <!--Här är sidan för att lägga till ny Utbildning hit kommer man när man klickar på Lägg till utbildning på sin profil-->
    <table class="table table-light">
        <tr>
            <td>
                <label>Titel</label>
                <input asp-for="education.Name" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <label>Beskrivning</label>
                <input asp-for="education.Description" type="text" />
            </td>
        <tr>
        <tr>
            <td>
                <label>Startdatum</label>
                <input asp-for="profileHasEducation.Startdate" type="date" value="@ViewBag.CurrentDate" />
                
            </td>
        <tr>
        <tr>
            <td>
                <label>Slutdatum</label>
                <input asp-for="profileHasEducation.Enddate" type="date" /> <p>Inget slutdatum? Lämna denna blank</p>
            </td>
        <tr>
            <td>

                <input type="submit" value="Spara" class="btn-primary" />
            </td>
        </tr>
    </table>

</form>