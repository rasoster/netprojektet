@model LoginViewModel;
  
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-action="LogIn">
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Användarnamn:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Username" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Lösenord:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4 form-check d-flex flex-row">
            <input type="checkbox" title="Remember me" id="rememberMe"  asp-for="RememberMe" class="form-check " />
            <label class="form-check-label" for="rememberMe">Kom ihåg mig</label>
        </div>


    </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
    <label>Har du inget konto?</label>
    <a asp-action="Register">Registrera dig</a>
</form>


