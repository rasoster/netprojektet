@model Project
<form asp-action="UpdateProject" method="post">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label for="formGroupExampleInput">Titel</label>
        <input asp-for="Title" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Beskrivning</label>
        <input asp-for="Description" class="form-control" type="text" />
    </div>
    <div class="form-group mb-4 mt-1">
    <input type="submit" value="Spara" class="btn btn-success" />
    </div>
</form>
<form asp-action="taBort" asp-route-id="@Model.Id">

    <button type="submit" class="btn btn-danger"> Ta bort projekt </button>
</form>

                                 


   

                                    